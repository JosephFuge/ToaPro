@model ToaPro.Models.Requirement

<form method="post" style="max-width: 400px; margin: auto;">
    <input asp-for="ClassId" type="hidden" />

    <label asp-for="Description">Objective:</label>
    <input asp-for="Description" type="text" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <label asp-for="Points">Points:</label>
    <input asp-for="Points" type="number" min="1" required style="width: 100%; padding: 8px; margin-bottom: 16px; box-sizing: border-box;"><br /><br />

    <button type="submit" style="background-color: #007bff; color: #fff; padding: 10px; border: none; border-radius: 4px; cursor: pointer; margin: auto; display: block;">Submit</button>
</form>
