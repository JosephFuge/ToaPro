@*
    This is the Judge Request time view (Ryan, Lili, and Amy)
    Students will have an additional text area to add why they need to request a new time as well as
    a brief NOTE below the text area. Judges will not have the additional text area and notice.
    Be sure to include this in the formatting of the view.
*@

@model Judge
@{
    ViewData["Title"] = "Home Page";
}
<vc:header-types title="Request a Time Exception" />

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #E9ECEF;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        .request-time-slot-container {
            background-color: #fff;
            padding: 20px;
            width: 350px;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .time-slot {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 10px 0;
            padding: 10px;
            background-color: lightgray;
            color: black;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .time-slot.selected,
            .time-slot:hover {
                background-color: #0056B3;
                color: white;
            }

            .time-slot input[type="checkbox"] {
                display: none;
            }

            .time-slot label {
                margin: 0;
                font-size: 14px;
            }

        h2 {
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>
    <div>
        <br />
        <br />
    </div>
    <div class="request-time-slot-container">
        <h2>Judge Availability Form</h2>
        <form method="post">
            <div>
                <div>
                    <label type="hidden" asp-for="Id">Enter Judge ID:</label>
                    <input asp-for="Id" />
                </div>
                <label>Select times you WILL NOT be available</label>
                <!-- Make each time slot a label to include the checkbox inside it -->
                <label class="time-slot" asp-for="TimeSlot1">
                    <input type="checkbox" name="TimeSlot1" asp-for="TimeSlot1" />
                    1:00 - 1:40
                </label>
                <label class="time-slot" asp-for="TimeSlot2">
                    <input type="checkbox" name="TimeSlot2" asp-for="TimeSlot2" />
                    1:45 - 2:25
                </label>
                <label class="time-slot" asp-for="TimeSlot3">
                    <input type="checkbox" name="TimeSlot3" asp-for="TimeSlot3" />
                    2:30 - 3:10
                </label>
                <label class="time-slot" asp-for="TimeSlot4">
                    <input type="checkbox" name="TimeSlot4" asp-for="TimeSlot4"  />
                    3:15 - 3:55
                </label>
                <label class="time-slot" asp-for="TimeSlot5">
                    <input type="checkbox" name="TimeSlot5" asp-for="TimeSlot5" />
                    4:00 - 4:40
                </label>
            </div>
            <div style="text-align: center;">
                <button type="submit" class="button">Submit</button>
            </div>
        </form>
        <div>
            <br />
        </div>
    </div>
    <div>
        <br />
        <br />
    </div>
    <script>
        // JavaScript to toggle checkbox and color on click of the whole div
        document.querySelectorAll('.time-slot').forEach(function (slot) {
            slot.addEventListener('click', function () {
                const checkbox = this.querySelector('input[type="checkbox"]');
                checkbox.checked = !checkbox.checked;
                this.classList.toggle('selected', checkbox.checked);
            });
        });
    </script>
</body>