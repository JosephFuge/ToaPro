@*
    This is the Judge Request time view (Ryan, Lili, and Amy)
    Students will have an additional text area to add why they need to request a new time as well as
    a brief NOTE below the text area. Judges will not have the additional text area and notice.
    Be sure to include this in the formatting of the view.
*@

@model Judge
@{
    ViewData["Title"] = "Home Page";
}
<vc:nav-bar-types user="Professor"></vc:nav-bar-types>
<vc:header-types title="Request a Time Exception" />

<h1>Request New Time</h1>

<body>
    <h2>Judge Availability Form</h2>
    <form method="post">
        <div>
            <label asp-for="Id">Judge ID:</label>
            <input asp-for="Id" />
        </div>
        <div>
            <label asp-for="ToaProUser.FirstName">First Name:</label>
            <input asp-for="ToaProUser.FirstName" />
        </div>
        <div>
            <label asp-for="ToaProUser.LastName">Last Name:</label>
            <input asp-for="ToaProUser.LastName" />
        </div>
        <div>
            <label>Select times you WILL NOT be available</label><br />
            <label><input type="checkbox" asp-for="TimeSlot1" value="false" />1:00 - 1:40</label><br />
            <label><input type="checkbox" asp-for="TimeSlot2" value="false" />1:45 - 2:25</label><br />
            <label><input type="checkbox" asp-for="TimeSlot3" value="false" />2:30 - 3:10</label><br />
            <label><input type="checkbox" asp-for="TimeSlot4" value="false" />3:30 - 4:10</label><br />
            <label><input type="checkbox" asp-for="TimeSlot5" value="false" />4:15 - 4:55</label><br />
            <!-- Don't forget to put the stuff in the Home Controller-->
        </div>
        <button type="submit">Submit</button>
    </form>
</body>