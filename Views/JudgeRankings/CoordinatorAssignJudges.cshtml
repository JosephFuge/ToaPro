    <style>
        /* Style for the grid */
        .grid-container {
            display: grid;
            grid-template-columns: auto repeat(6, 1fr); /* First column auto width, then 6 timeslots */
            gap: 1px; /* Gap between grid cells */
        }

        .grid-item {
            border: 1px solid #ccc; /* Border for each grid cell */
            padding: 10px;
            text-align: center;
        }
        /* Style to highlight header cells */
        .grid-header {
            font-weight: bold;
            background-color: #F0F0F0;
        }
        /* Table styling */
        table {
            border-collapse: separate;
            border-radius: 8px;
            border-spacing: 0px;
            overflow: hidden;
            width: 100%; /* Fill up the container width */
        }

            table:not(.mse-no-border) {
                border: 1px solid #C9C9C9;
            }

            table th:not(:last-child, .mse-no-border),
            table td:not(:last-child, .mse-no-border) {
                border-right: 1px solid #D1D1D1;
            }

            table tr th {
                vertical-align: middle;
                padding: 0.5rem 1rem;
                background-color: #002E5D;
                color: #FFF;
            }

            table tr td {
                vertical-align: middle;
                padding: 0.5rem 0.7rem;
                min-width: 120px;
            }

            table tr p {
                margin-bottom: 0;
            }

            table tbody tr:nth-of-type(2n) {
                background-color: #EDF3FC;
            }

        .mse-table-scroll,
        .mse-table-wrapped-no-header,
        .mse-table-wrapped {
            max-width: 100%;
            overflow-x: auto;
            display: block;
        }

            .mse-table-wrapped-no-header table,
            .mse-table-wrapped table {
                width: 100%;
            }
            /* media (max-width: 768px) {
                    .mse-table-wrapped-no-header th,
                    .mse-table-wrapped th {
                        display: none;
                    } */
            .mse-table-wrapped-no-header td,
            .mse-table-wrapped td {
