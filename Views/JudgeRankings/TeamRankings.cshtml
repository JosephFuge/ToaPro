@model Ranking

<style>
    .button-container {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .rounded-btn {
        border-radius: 20px;
        width: 10%;
        margin: 50px;
    }

        .rounded-btn:hover {
            font-weight: bold;
            color: white;
        }

    .navy-background {
        background-color: #002e5d;
        color: white;
    }

    .white-button {
        background-color: white;
        color: #002e5d;
        border: 2px solid #002e5d;
    }

        .white-button:hover {
            background-color: #002e5d;
            color: white;
        }
</style>
<vc:nav-bar-types user="JudgeNav"></vc:nav-bar-types>
<vc:submenu-types view="Default"></vc:submenu-types>
<vc:header-types title="Presentation Form" />
<div class="button-container">
    @foreach (Judge judge in ViewBag.joinedData)
    {
        @foreach (var presentation in judge.Presentations)
        {
            <a asp-controller="JudgeRankings" asp-action="JudgePresentationForm" asp-route-groupId="@presentation.GroupId"><button type="button" class="large-button">Team @presentation.Group.Section - @presentation.Group.Number</button></a>
        }
    }
    <a asp-controller="JudgeRankings" asp-action="TeamRankings"><button type="button" class="large-ghostButton">Rankings</button></a>
</div>

