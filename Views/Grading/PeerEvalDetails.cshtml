@model Evaluation

<h2>Diagnostic View for Evaluation Model</h2>

@if (Model == null)
{
    <p>The model is null.</p>
}
else
{
    <p>The model is not null.</p>
    <p>Evaluation ID: @Model.EvaluationId</p>
    <p>Peer Evaluation Grade: @Model.PeerEvalGrade</p>
    <p>Evaluated ID: @Model.EvaluatedId</p>
    <p>Evaluation Comments: @Model.EvalComments</p>
    @* <p>Submission ID: @Model.SubmissionId</p> *@
    <p>Group ID: @(Model.GroupId.HasValue ? Model.GroupId.ToString() : "Not Set")</p>

    <h3>Submission:</h3>
@*     @if (Model.Submission == null)
    {
        <p>No submission data available.</p>
    }
    else
    {
        <p>Submission exists with ID: @Model.Submission.Id</p>
        <!-- Output other Submission properties as needed -->
    }
 *@
    <h3>Group:</h3>
    @if (Model.Group == null)
    {
        <p>No group data available.</p>
    }
    else
    {
        <p>Group exists with ID: @Model.Group.Id</p>
        <!-- Output other Group properties as needed -->
    }

    <h3>Students:</h3>
    @if (Model.Students == null || !Model.Students.Any())
    {
        <p>No student data available.</p>
    }
    else
    {
        <ul>
            @foreach (var student in Model.Students)
            {
                <li>Student ID: @student.Id - Name: @student.ToaProUser.FirstName @student.ToaProUser.LastName</li>
            }
        </ul>
    }
}


