@*Grading View for professors and TAs (Groups 1, 10, & 12)*@
@model IEnumerable<GradingSummaryViewModel>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<vc:nav-bar-types user="TA"></vc:nav-bar-types>
<vc:submenu-types view="Grading"></vc:submenu-types>
<vc:header-types title="Grading Page" />

<br />
<div class="container">
    @* @foreach (var x in Model) *@
    
        <div style="display: flex; justify-content: center; align-items: center">
        <iframe width="500" height="300" src="https://www.youtube.com/embed/4zahvcJ9glg" frameborder="0" allowfullscreen></iframe> <!--x.Submission.YoutubeLink-->
        </div>
        <br />
        <div style="display: flex; justify-content: center; align-items: center">
            <button style="margin-right: 40px" type="button" class="btn btn-primary">
            <span style="margin-right: 15px">Download Submission Folder</span>
            <i class="fa fa-download"></i>
        </button>
        <a style="margin-left: 40px" class="btn btn-dark" href="https://www.lingscars.com/" target="_blank"> <!--x.Submission.GithubLink-->
            <span style="margin-right: 30px">GitHub</span>
            <i class="fa fa-github"></i>
        </a>
        </div>
    
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Objective</th>
                <th>Available Points</th>
                <th>Score</th>
                <th>Comments</th>
            </tr>
        </thead>

        @* @foreach (var x in Model) *@
        
        <tbody>
            <tr>
                <td>Deployment</td> <!--x.Requirement.Description-->
                <td>3</td> <!--x.Requirement.Points-->
                <td>2</td> <!--x.Grade.Points-->
                <td>Not too bad</td> <!--x.Grade.Comments-->
            </tr>
            <tr>
                <td>Styling</td>
                <td>5</td>
                <td>5</td>
                <td>Hayden is so cool man</td>
            </tr>
        </tbody>
               
    </table>
</div>
