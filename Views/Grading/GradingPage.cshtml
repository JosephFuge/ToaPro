@*Grading View for professors and TAs (Groups 1, 10, & 12)*@
@model IEnumerable<GradingSummaryViewModel>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<vc:nav-bar-types user="TA"></vc:nav-bar-types>
<vc:submenu-types view="Default"></vc:submenu-types>
<vc:header-types title="GradingPage" />

<div class="container">
    @foreach (var x in Model)
    {
        <div style="display: flex; justify-content: center; align-items: center">
            <iframe width="500" height="300" src="@x.Submission.YoutubeLink" frameborder="0" allowfullscreen></iframe>      <!--https://www.youtube.com/embed/4zahvcJ9glg-->
        </div>
        <br />
        <div style="display: flex; justify-content: center; align-items: center">
            <button style="margin-right: 40px" type="button" class="btn btn-primary">
            <span style="margin-right: 15px">Download Submission Folder</span>
            <i class="fa fa-download"></i>
        </button>
        <a style="margin-left: 40px" class="btn btn-dark" href="@x.Submission.GithubLink" target="_blank">       <!--https://www.lingscars.com/-->
            <span style="margin-right: 30px">GitHub</span>
            <i class="fa fa-github"></i>
        </a>
        </div>
    }
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Objective</th>
                <th>Available Points</th>
                <th>Score</th>
                <th>Comments</th>
            </tr>
        </thead>

        @foreach (var x in Model)
        {
            <tbody>
            <tr>
                <td>@x.Requirement.Description</td>
                <td>@x.Requirement.Points</td>
                <td>@x.Grade.Points</td>
                <td>@x.Grade.Comments</td>
            </tr>
        </tbody>
        }       
    </table>
</div>
